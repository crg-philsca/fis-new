{
  "name": "Inbound Flight Sync (Hardcoded Base URL)",
  "nodes": [
    {
      "id": "Webhook_Inbound",
      "name": "Inbound Flight Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [300, 200],
      "parameters": {
        "path": "flight-sync",
        "httpMethod": "POST",
        "responseMode": "onReceived",
        "options": {
          "rawBody": false
        }
      }
    },
    {
      "id": "Set_Correlation",
      "name": "Set Correlation & Retry Count",
      "type": "n8n-nodes-base.function",
      "typeVersion": 1,
      "position": [540, 200],
      "parameters": {
        "functionCode": "const hdr = $json.headers || {};\nlet cid = hdr['x-correlation-id'] || hdr['X-Correlation-ID'];\nif (!cid) {\n  cid = $uuid();\n}\n\n// Initialize retry count\nconst retryCount = ($json.retry_count || 0) + 1;\n\n// Pass original payload and new correlation/retry data\nreturn [{ json: { correlation_id: cid, retry_count: retryCount, body: $json.body || $json } }];"
      }
    },
    {
      "id": "HTTP_FIS_Api",
      "name": "POST /api/v1/sync/flight",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 1,
      "position": [800, 200],
      "parameters": {
        "url": "http://fis-new.test/api/v1/sync/flight",
        "method": "POST",
        "jsonParameters": true,
        "options": {},
        "sendBody": true,
        "bodyParametersJson": "={{ JSON.stringify($json.body || $json.body) }}",
        "headerParametersJson": "={\n  \"X-Correlation-ID\": $json.correlation_id\n}",

        "authentication": "predefined" 
      }
    },
    {
      "id": "Check_HTTP_Success",
      "name": "Check HTTP Success",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [1040, 200],
      "parameters": {
        "conditions": {
          "number": [
            {
              "value1": "={{$json[\"statusCode\"] || $json.statusCode}}",
              "operation": "less",
              "value2": 300
            }
          ]
        }
      }
    },
    {
      "id": "Retry_Loop",
      "name": "Retry Logic",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [1280, 120],
      "parameters": {
        "conditions": {
          "number": [
            {
              "value1": "={{$json.retry_count}}",
              "operation": "less",
              "value2": 4
            }
          ]
        }
      }
    },
    {
      "id": "Wait_Backoff",
      "name": "Wait + Backoff",
      "type": "n8n-nodes-base.wait",
      "typeVersion": 1,
      "position": [1520, 120],
      "parameters": {
        "amount": 10,
        "unit": "seconds"
      }
    },
    {
      "id": "Exit_Success",
      "name": "Success Response",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [1280, 300],
      "parameters": {
        "responseBody": "={ flight_sync: 'accepted', correlation_id: $json.correlation_id, retries: $json.retry_count - 1}",
        "responseCode": 202
      }
    },
    {
      "id": "Exit_Failure",
      "name": "Failure Response",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [1520, 300],
      "parameters": {
        "responseBody": "={ error: 'Flight sync failed after multiple retries.', correlation_id: $json.correlation_id, last_status: $json.statusCode }",
        "responseCode": 500
      }
    }
  ],
  "connections": {
    "Webhook_Inbound": {
      "main": [
        [ { "node": "Set Correlation & Retry Count", "type": "main", "index": 0 } ]
      ]
    },
    "Set Correlation & Retry Count": {
      "main": [
        [ { "node": "POST /api/v1/sync/flight", "type": "main", "index": 0 } ]
      ]
    },
    "POST /api/v1/sync/flight": {
      "main": [
        [ { "node": "Check HTTP Success", "type": "main", "index": 0 } ]
      ]
    },
    "Check HTTP Success": {
      "main": [
        [ { "node": "Exit_Success", "type": "main", "index": 0 } ],
        [ { "node": "Retry Logic", "type": "main", "index": 0 } ]
      ]
    },
    "Retry Logic": {
      "main": [
        [ { "node": "Wait + Backoff", "type": "main", "index": 0 } ],
        [ { "node": "Failure Response", "type": "main", "index": 1 } ]
      ]
    },
    "Wait + Backoff": {
      "main": [
        [ { "node": "Set Correlation & Retry Count", "type": "main", "index": 0 } ]
      ]
    }
  },
  "settings": { "executionOrder": "v1" },
  "pinData": {},
  "versionId": "inbound-flight-sync-v1-hardcoded"
}